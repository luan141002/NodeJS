<div class='mt-4'>
    <div class='row'>
        {{#each products}}
            <div class='col-sm-6 col-lg-4'>
                <div class='card mt-4' style='width: 18rem;'>

                    <a href='/products/{{this.slug}}'>
                        <img
                            class='card-img-top'
                            src='{{this.image}}'
                            alt='Card image cap'
                        />
                    </a>
                    <div class='card-body'>
                        <a href='/products/{{this.slug}}'>
                            <h5 class='card-title'>{{this.proName}}</h5>
                        </a>
                        <p class='card-text'>{{this.desc}}</p>
                        <a href='#' class='btn btn-primary'>Add to cart</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>